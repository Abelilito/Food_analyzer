{
  "compilerOptions": {
    "target": "ES6",                       
    "module": "ESNext",                    
    "lib": ["DOM", "ESNext"],              
    "allowJs": false,                      
    "checkJs": false,                      
    "jsx": "react-jsx",                    
    "strict": true,                        
    "esModuleInterop": true,               
    "moduleResolution": "node",            
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                   
    "rootDir": "./src",                     
    "outDir": "./dist",                     
    "sourceMap": true,
     "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }               
  },
  "include": ["src"],                       
  "exclude": ["node_modules", "dist"]       
}
